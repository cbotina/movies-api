<h1>Transaction Details</h1>
<h2>Date: {{date}}</h2>
<h2>User Details</h2>
<ul>
  <li>
    <p><b>Name:</b> {{user.name}} {{user.surname}}</p>
  </li>
  <li>
    <p><b>Email:</b> {{user.email}}</p>
  </li>
</ul>
<h2>Rentals</h2>
<ul>
  {{#each rentals}}
    <li>
      <h3>Rental #{{this.id}}</h3>
      <ul>
        <li><p><b>Movie:</b> {{this.movie.title}}</p></li>
        <li><p><b>Due Date:</b>{{this.dueDate}}</p></li>
      </ul>
    </li>
  {{/each}}
</ul>